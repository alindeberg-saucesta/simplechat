<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ollama Chatbot</title>
    <style>
        #chat {
            height: 400px;
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            overflow-y: scroll;
        }
    </style>
</head>
<body>
    <div id="chat"></div>
    <form id="chatForm">
        <input type="text" id="promptInput" placeholder="Type your message..." autocomplete="off">
        <button type="submit">Send</button>
    </form>

<script>
document.getElementById('chatForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const prompt = document.getElementById('promptInput').value;
  if (!prompt.trim()) return;

  // Clear input
  document.getElementById('promptInput').value = '';
  
  // Append user message to chat window
  const chatWindow = document.getElementById('chat');
  const userMessage = document.createElement('div');
  userMessage.textContent = `You: ${prompt}`;
  userMessage.style.fontWeight = 'bold';
  chatWindow.appendChild(userMessage);
  chatWindow.scrollTop = chatWindow.scrollHeight;

  // Make API request to server
  const responseStream = await fetch('/api/chat', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ prompt })
  });

  const reader = responseStream.body.getReader();
  let chunks = '';

  while (true) {
    const { value, done } = await reader.read();
    if (done) break;
    
    const chunk = new TextDecoder().decode(value);
    chunks += chunk;

    // Process each data event
    const lines = chunks.split('\n');
    for (const line of lines.slice(0, -1)) {
      if (line.startsWith('data:')) {
        const messagePart = line.replace('data: ', '');
        const botMessageElement = document.createElement('div');
        botMessageElement.textContent = `Bot: ${messagePart}`;
        chatWindow.appendChild(botMessageElement);
        chatWindow.scrollTop = chatWindow.scrollHeight;
      }
    }
    chunks = lines.slice(-1)[0] || '';
  }
});
</script>
</body>
</html>
